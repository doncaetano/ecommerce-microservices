{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "rootDirs": [
      "src"
    ],
    "experimentalDecorators": true
  },
  "exclude": ["**/node_modules", "**/build"]
}
