{
  "openapi": "3.0.0",
  "info": {
    "title": "Cart API",
    "description": "Cart microservice used in the e-commerce application",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local test API"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "List carts",
        "description": "This route is used to get the stored carts list",
        "tags": ["Cart"],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Cart"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{id}/product": {
      "post": {
        "summary": "Add cart product",
        "description": "This route is used to add a product to a cart",
        "tags": ["CartProduct"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the cart that will receive the product",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Cart": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "sessionId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "closedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      }
    }
  }
}
